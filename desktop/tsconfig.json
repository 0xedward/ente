{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        /* Emit the generated JS into app/ */
        "outDir": "app",
        "baseUrl": "src",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    /* transpile all ts files in src/ */
    "include": ["src/**/*.ts"]
}
