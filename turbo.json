{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "export": {
            "dependsOn": ["build"],
            "outputs": ["out/**"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "albums": {
            "cache": false,
            "persistent": true
        }
    },
    "globalEnv": [
        "NEXT_PUBLIC_ENTE_ENDPOINT",
        "NEXT_PUBLIC_ENTE_PAYMENT_ENDPOINT",
        "NEXT_PUBLIC_ENTE_ALBUM_ENDPOINT",
        "NEXT_PUBLIC_ENTE_FAMILY_PORTAL_ENDPOINT",
        "NODE_ENV",
        "SENTRY_RELEASE"
    ]
}
